<!doctype html xmlns:ng="http://angularjs.org">
<html  >
<head>
	<title>Trading WorldCup 2014</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body xmlns:ng="http://angularjs.org" id="ng-app" ng-app="frontpage" ng-controller="frontController" >

	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header" >
          <a class="navbar-brand" href="#"  >   
				<small ng-show="marketClosed"> Market is closed. </small>
				<timer ng-hide="marketClosed" end-time="mktEnd">Market closes in {{hours}} hours, {{minutes}} minutes, {{seconds}} seconds.</timer>
		  </a>
		</div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
          	<li><a href="/login" ><span class="fa fa-lock""></span>Login</a></li>
		<!--	<li ><a href="/signup"><span class="fa fa-user"></span><strong>Signup</strong></a></li>
          </ul>
        </div>
        	<!--/.nav-collapse -->
      </div>
    </div>


	<div class="jumbotron text-center">
		<div class="container-fluid" >
			<h1 >WorldCup 2014 Live Bulletin </h1>
			<small >Powered by WFZZ Exchange. Copyright(c) 2014</small><p>
		</div>
	</div>
	
	

	<div id="secs-list" class="row">
		<div class="col-md-4" >
			<div class="panel panel-default">					
            	<div class="panel-heading">
                	<i  class="glyphicon glyphicon-stats pull-left"></i>
                	<strong> Trade Bulletin </strong>
                </div>  
                <div class="panel-body">
                	<div id='bulletin'>
                    	<table class="table table-responsive table-striped table-bordered table-hover table-condensed no-footer">
	                        <thead>
	                            <tr>
	                                <th >Country</th>
	                                <th >Bid </th>
	                                <th >Ask </th>
	                                <th >Open Int.</th>
	                            </tr>
	                        </thead>
	                        <tbody>
	                            <tr ng-repeat="sec in secs" >
									<td>{{ sec.security}} </td>
	                                <td>{{sec.bid}}</td>
	                                <td>{{sec.ask}}</td>
	                                <td>{{sec.OI }}</td>
	                            </tr>                                      
	                        </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
              
            </div>
            <!-- /.panel -->
    	</div>


		<div class="col-md-4">
	        <div class="panel panel-default ">
	        	    <div class="panel-heading">
	                	<i  class="glyphicon glyphicon-comment"></i> <strong> Messages </strong>
	                </div>
	                <div id='chatroom' class="panel-body">						
							<div class="chatArea">
							        <ul class="messages"></ul>
							</div>
					</div>
					<div class="panel-footer">
					 	<ul>
					 		 <li class="login page">
							 	<input class="usernameInput" placeholder="Start by typing your name here..." />
							 </li>
							 <li class="chat page">
					         	<input class="inputMessage" placeholder="Type here..."/>
					         </li>
						</ul>	 
					</div>
			</div>
		</div>
        <div class="col-md-4">
	        <div class="panel panel-default">
	        	    <div class="panel-heading">
	                	<i  class="glyphicon glyphicon-pushpin"></i> <strong> Example Ticket </strong>
	                </div>
	                <div class="panel-body">
						<iframe width="350" height="550" frameborder="0" scrolling="yes" src="https://onedrive.live.com/embed?cid=CDEC144758F9E1C9&resid=CDEC144758F9E1C9%211549&authkey=AMaNWmNO8IaOHrs&em=2&wdAllowInteractivity=False&Item='Sheet1'!A1%3AB37&wdHideGridlines=True"></iframe>	        </div>
					</div>
			</div>
		</div>
	</div>
  <!--
 -->
</body>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->	
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular.min.js"></script>
	<script src="./plugin/timer.js"></script>

	<script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="./css/myStyle.css">	
    <script src="index.js"></script>
    <script src="chat.js"></script>
</html>









  