<!doctype html>
<html xmlns:ng="http://angularjs.org" >
<head>
	<title>Trading WorldCup 2014</title>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    
    
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="./css/myStyle.css">
	
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    
</head>
<body xmlns:ng="http://angularjs.org" id="ng-app" ng-app="frontpage" ng-controller="frontController" >
	
	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	      <div class="container">
	        	<div class="navbar-header" >
	          		<a class="navbar-brand" href="#"  >   
						<small ng-show="marketClosed"> Market is closed. </small>
						<timer ng-hide="marketClosed" end-time="mktEnd">Market closes in {{hours}} hours, {{minutes}} minutes, {{seconds}} seconds.</timer>
				  	</a>
				</div>
	       
	         	
				<div class="navbar-collapse collapse navbar-right">
						<ul class="nav navbar-nav">
						  <li class="active" >
			        		<a href="/login"  class="btn btn-primary btn-lg">
			        			<span class="fa fa-lock"></span>Login
			        		</a>
			        	  </li>	
			      <!--  	  <li>
			        	  	<a href="/auth/google" >
			        	  		<span class="fa fa-google-plus">
			        	  		</span> Google
			        	  	</a>
			        	  </li>		-->			  
						</ul>
				</div>
	      </div>
	
		<div class="jumbotron text-center">	
				
			<h1 ><span class="glyphicon glyphicon-star-empty"></span>
			      WorldCup 2014 Live Bulletin
			     <span class="glyphicon glyphicon-star-empty"></span>	</h1><p>
			<small >Powered by WFZZ Exchange. Copyright(c) 2014</small>		
		</div>
	
	</div>

		<div id="secs-list" class="row">
		  <div class="container" >
		  	<div class="col-lg-4" >
				<div class="panel panel-primary">								
	            	<div class="panel-heading">
	            		<div  class="row">
							<div class="col-lg-6">	
	                			<i class="glyphicon glyphicon-stats pull-left"></i>
	                			<strong> Trade Bulletin </strong>
	                		</div> 
				            <div class="col-lg-6">				
				            	<input class="form-control input-sm" type="text" ng-model="country" placeholder="filter by country..." />
				            </div>					        
	            		</div>
	        		</div>
	                <div class="panel-body">
	                	<div id='bulletin'>
	                    	<table class="table table-responsive table-striped table-bordered table-hover table-condensed no-footer">
		                        <thead>
		                            <tr>
		                                <th style="width: 30%">Country</th>
		                                <th style="width: 20%">Bid </th>
		                                <th style="width: 20%">Ask </th>
		                                <th style="width: 30%">Open Int.</th>
		                            </tr>
		                        </thead>
		                        <tbody>
		                            <tr ng-repeat="sec in secs | filter : country" >
										<td>{{sec.security}} </td>
		                                <td>{{sec.bid}}</td>
		                                <td>{{sec.ask}}</td>
		                                <td>{{sec.OI }}</td>
		                            </tr>                                      
		                        </tbody>
	                        </table>
	                    </div>
	                    <!-- /.table-responsive -->
	                </div>
	                <!-- /.panel-body -->
	              
	            </div>
	            <!-- /.panel -->
	    	</div>
	
			<div class="col-lg-4">
		        <div class="panel panel-primary">
		        	    <div class="panel-heading">
		                	<i  class="glyphicon glyphicon-pushpin"></i> <strong> Example Ticket </strong>
		                </div>
		                <div class="panel-body">
							<iframe width="100%" height="590" frameborder="0" scrolling="no" src="https://onedrive.live.com/embed?cid=CDEC144758F9E1C9&resid=CDEC144758F9E1C9%211549&authkey=AMaNWmNO8IaOHrs&em=2&wdAllowInteractivity=False&Item='ticket'!A1%3AB37&wdHideGridlines=True"></iframe>       
						</div>
				</div>
			</div>
			<div class="col-lg-4">
		        <div class="panel panel-primary ">
		        	    <div class="panel-heading">
		                	<i  class="glyphicon glyphicon-comment"></i> <strong> Messages </strong>
		                </div>
		                <div id='chatroom' class="panel-body">						
								<div class="chatArea">
								        <ul class="messages"></ul>
								</div>
						</div>
						<div class="panel-footer">
						 	<ul>
						 		 <li class="login page">
								 	<input class="usernameInput" placeholder="Start by typing your name here..." />
								 </li>
								 <li class="chat page">
						         	<input class="inputMessage" placeholder="Type here..."/>
						         </li>
							</ul>	 
						</div>
				</div>
			</div>
	      </div>  
		</div>
	</div>
  <!--
 -->
</body>
	<!-- Latest compiled and minified CSS -->
	
	
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->	
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular.min.js"></script>
	<script src="./plugin/timer.js"></script>
	<script src="./plugin/prettyDate.js"></script>
	<script src="/socket.io/socket.io.js"></script>
    <script src="index.js"></script> 
    <script src="chat.js"></script>
</html>










  