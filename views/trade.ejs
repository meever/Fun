<!-- views/profile.ejs -->
<!doctype html>
<html ng-app="securities" >
<head>
	<title>Trading WorldCup 2014</title>
	<style>
		body 		{ padding-top:10px; word-wrap:break-word; }
	</style>
</head>


<body ng-controller="mainController">


<div class="jumbotron text-center">
		<div class="container">
			<h1>WorldCup 2014</h1>	
			<h2>Welcome <%= user.local.name %> !</h2>	
			<script>var userName = "<%= user.local.name %>" </script>
			<a href="/logout" class="btn btn-default btn-lg pull-right">Logout</a>
		</div>
</div>


<div class="container" style="display: none;">
	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>name</strong>: <%= user.local.name %><br>
						<strong>password</strong>: <%= user.local.password %>
					</p>

			</div>
		</div>
	</div>
</div>


<div >
 	<div >
		<div id="secs-list" class="row">
				<div class="col-lg-12" >
					<div class="panel panel-default">
                        <div  class="panel-heading">
                            <h2> Bullitin </h2>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover no-footer">
                                    <thead>
                                        <tr>
                                        	<th ng-show="admin" style="width: 40px;">Remove</th>
                                            <th style="width: 80px;">Country</th>
                                            <th style="width: 50px;">Open Interest</th>
                                            <th style="width: 30px;">Bid </th>
                                            <th style="width: 30px;">Ask </th>
                                            <th style="width: 10px;"> </th>
                                            <th style="width: 30px;">Own </th>
                                            <th style="width: 130px;">Buy/Sell </th>
                                            <th style="width: 50px;">Trade </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="sec in secs">
                                            <td ng-show="admin"><input type="checkbox" ng-click="deleteSec(sec._id)"></td>
                                            <td>{{ sec.security}} </td>
                                            <td> {{sec.OI }}</td>
                                            <td>{{sec.bid}}</td>
                                            <td>{{sec.ask}}</td>
                                            <td></td>
                                            <td>{{sec.own}}</td>
                                            <td><input type="number" class="form input-sm text-center" placeholder="toTrade" ng-model="toTrade"></td>
                                            <td><button type="trade" class="btn btn-primary btn-sm" ng-click="tradeThis(sec, toTrade)">Trade</button></td>
                                        </tr>                                      
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
            </div>
		<!-- FORM TO CREATE securities -->
		<div id="sec-form" class="row" ng-show="admin">
			<div class="col-lg-8 col-sm-offset-1 text-left">
				<form>
					<div class="form-group">

						<!-- BIND THIS VALUE TO formData.text IN ANGULAR -->
						<input type="text" class="form-inline input-sm text-center" placeholder="security name" ng-model="formData.name">
						<input type="number" class="form-inline input-sm text-center" placeholder="open interest" ng-model="formData.OI">
						<input type="number" class="form-inline input-sm text-center" placeholder="bid" ng-model="formData.bid">
						<input type="number" class="form-inline input-sm text-center" placeholder="ask" ng-model="formData.ask">
					

					<!-- createSecs() WILL CREATE NEW TODOS -->
					<button type="submit" class="btn btn-primary btn-sm" ng-click="createSec()">Add</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



</body>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
	<script src="client.js"></script>
</html>