<!-- views/profile.ejs -->
<!doctype html>
<html >
<head>
	<title>Trading WorldCup 2014</title>
	<style>
		body 		{ padding-top:10px; word-wrap:break-word; }
	</style>
</head>


<body>
<div class="jumbotron text-center">
		<div class="container">
			<h1>WorldCup 2014</h1>	
			<h2>Welcome <%= user.local.name %> !</h2>	
			<a href="/logout" class="btn btn-default btn-lg pull-right">Logout</a>
		</div>
</div>

<div class="container" style="display: none;">
	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user._id %><br>
						<strong>name</strong>: <%= user.local.name %><br>
						<strong>password</strong>: <%= user.local.password %>
					</p>

			</div>
		</div>
	</div>
</div>

<div ng-app="securities">
 	<div ng-controller="mainController">
		<div id="secs-list" class="row">
				<div class="col-lg-12" >
					<row>
								<div class="col-lg-1 col-centered" >
									<span class="label label-primary">Remove</span>
								</div>
								<div class="col-lg-1 col-centered" >
									<span class="label label-primary">Security</span>
								</div>
								<div class="col-lg-1 col-centered" >
									<span class="label label-primary">Open Interest</span>
								</div>
								<div class="col-lg-1 col-centered" > 
									<span class="label label-primary">Bid</span>
								</div>								
								<div class="col-lg-1 col-centered" >
									<span class="label label-primary">Ask</span>
								</div>
					</row>	
						
						
					<div class="well">					
						
						<div class="checkbox" ng-repeat="sec in secs">
							<label>
								<div class="col-lg-1" >
									<input type="checkbox" ng-click="deleteSec(sec._id)">
								</div>
								<div class="col-lg-1" >
									 {{ sec.security}} 
								</div>
								<div class="col-lg-1" >
									 {{sec.OI }}
								</div>
								<div class="col-lg-1" > 
										{{sec.bid}}
								</div>								
								<div class="col-lg-1" >
										{{ sec.ask }}
								</div>
							</label>
						</div>
					</div>
				</div>
		</div>

		<!-- FORM TO CREATE TODOS -->
		<div id="sec-form" class="row">
			<div class="col-lg-8 col-sm-offset-1 text-left">
				<form>
					<div class="form-group">

						<!-- BIND THIS VALUE TO formData.text IN ANGULAR -->
						<input type="text" class="form-inline input-sm text-center" placeholder="security name" ng-model="formData.name">
						<input type="number" class="form-inline input-sm text-center" placeholder="open interest" ng-model="formData.OI">
						<input type="number" class="form-inline input-sm text-center" placeholder="bid" ng-model="formData.bid">
						<input type="number" class="form-inline input-sm text-center" placeholder="ask" ng-model="formData.ask">
					

					<!-- createSecs() WILL CREATE NEW TODOS -->
					<button type="submit" class="btn btn-primary btn-sm" ng-click="createSec()">Add</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



</body>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
	<script src="client.js"></script>
</html>
